# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

## An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
## An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
## An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message
#
## Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Application

GET     /                           controllers.ApplicationController.index
GET     /profile                    controllers.ApplicationController.profile

# Rest api
GET /rest/profile controllers.RestApiController.profile

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Authentication routes
GET /auth/signup controllers.AuthController.startSignUp
POST /auth/signup controllers.AuthController.handleStartSignUp
GET /auth/signup/:token controllers.AuthController.signUp(token:String)
GET /auth/reset controllers.AuthController.startResetPassword
POST /auth/reset controllers.AuthController.handleStartResetPassword
GET /auth/reset/:token controllers.AuthController.resetPassword(token:String)
POST /auth/reset/:token controllers.AuthController.handleResetPassword(token:String)
GET /auth/signin controllers.AuthController.signIn
POST /auth/authenticate controllers.AuthController.authenticate
GET /auth/social/:providerId controllers.AuthController.socialAuthenticate(providerId:String)
GET /auth/signout controllers.AuthController.signOut